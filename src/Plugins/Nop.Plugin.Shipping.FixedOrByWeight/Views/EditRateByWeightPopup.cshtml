@{
    Layout = "_AdminPopupLayout";
}
@model Nop.Plugin.Shipping.FixedOrByWeight.Models.ShippingByWeightModel

@*Use "asp-all-route-data" to automatically generate "action" form attribute (including query string)*@
<form asp-all-route-data="@null">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Common.Edit")
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @await Html.PartialAsync("~/Plugins/Shipping.FixedOrByWeight/Views/_CreateOrUpdateRateByWeight.cshtml", Model)
        </div>
    </div>
</form>