@model OrderModel.UploadLicenseModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.Title = T("Admin.Orders.Products.License.UploadFile").Text;
}

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();}
        catch (e){}
        window.close();
    </script>
}

@*Use "asp-all-route-data" to automatically generate "action" form attribute (including query string)*@
<form asp-all-route-data="@null">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Orders.Products.License.UploadFile")
        </h1>
        <div class="pull-right">
            &nbsp;
        </div>
    </div>

    <div class="content">
        <div asp-validation-summary="All"></div>
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default panel-popup">
                    <div class="panel-body">
                        <input asp-for="OrderId" type="hidden" />
                        <input asp-for="OrderItemId" type="hidden" />
                        <div class="form-group">
                            <div class="col-sm-12">
                                <nop-editor asp-for="LicenseDownloadId" />
                        </div>
                        <div class="form-group">
                            <div class="col-sm-2 col-sm-offset-4">
                                <button type="submit" name="uploadlicense" id="uploadlicense" class="btn btn-primary">
                                    @T("Admin.Common.Save")
                                </button>
                            </div>
                            <div class="col-sm-2">
                                @if (Model.LicenseDownloadId > 0)
                                {
                                <button type="submit" name="deletelicense" id="deletelicense" class="btn bg-red">
                                    @T("Admin.Common.Delete")
                                </button>
                                }
                                else
                                {
                                <text>&nbsp;</text>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>