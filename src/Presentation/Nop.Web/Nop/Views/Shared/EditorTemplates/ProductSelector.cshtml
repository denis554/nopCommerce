@model int
@using Nop.Web.Framework;
@using Telerik.Web.Mvc.UI;
@{
    var product = EngineContext.Current.Resolve<Nop.Services.Catalog.IProductService>().GetProductById(Model);    
}
@if (product != null)
{
    @(Html.Telerik().ComboBox().Name(ViewData.TemplateInfo.HtmlFieldPrefix).Items(addAction =>
    {
        addAction.Add().Text(product.Name).Value(product.Id.ToString()).Selected(true);
    }).DataBinding(binding =>
    {
        binding.Ajax().Select("_AjaxComboBo", "Product");
    }))
}
else
{ 
    @(Html.Telerik().ComboBox().Name(ViewData.TemplateInfo.HtmlFieldPrefix)
    .DataBinding(binding =>
    {
        binding.Ajax().Select("_AjaxComboBo", "Product");
    }))
}
