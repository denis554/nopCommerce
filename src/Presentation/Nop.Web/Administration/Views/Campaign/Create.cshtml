@model CampaignModel
@{
    //page title
    ViewBag.Title = T("Admin.Promotions.Campaigns.AddNew").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Campaigns");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Promotions.Campaigns.AddNew") 
            <small>@Html.ActionLink("(" + T("Admin.Promotions.Campaigns.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}