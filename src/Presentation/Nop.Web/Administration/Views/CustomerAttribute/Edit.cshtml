@model CustomerAttributeModel

@{
    //page title
    ViewBag.Title = T("Admin.Customers.CustomerAttributes.EditAttributeDetails").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Customer and user settings");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customerattribute-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Customers.CustomerAttributes.EditAttributeDetails") - @Model.Name 
            <small>@Html.ActionLink("(" + T("Admin.Customers.CustomerAttributes.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")" />
            <span id="customerattribute-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("customerattribute-delete")