@model AffiliateModel
@{
    //page title
    ViewBag.Title = T("Admin.Affiliates.EditAffiliateDetails").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Affiliates");
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
       <h1 class="pull-left">
           @T("Admin.Affiliates.EditAffiliateDetails") - @Model.Address.FirstName @Model.Address.LastName 
           <small>@Html.ActionLink("(" + T("Admin.Affiliates.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")" />
            <span id="affiliate-delete" class="btn bg-red">
                <i class="fa fa-trash"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("affiliate-delete")