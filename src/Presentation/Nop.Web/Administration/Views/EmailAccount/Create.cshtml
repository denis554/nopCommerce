@model EmailAccountModel

@{
    //page title
    ViewBag.Title = T("Admin.Configuration.EmailAccounts.AddNew").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("EmailAccounts");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Configuration.EmailAccounts.AddNew")
            <small>@Html.ActionLink("(" + T("Admin.Configuration.EmailAccounts.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")"/>
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")"/>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}