@model CategoryModel
@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Categories.AddNew").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Categories");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Catalog.Categories.AddNew")
            <small>@Html.ActionLink("(" + T("Admin.Catalog.Categories.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
