@model ForumModel

@{
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Forums.Forum.EditForum").Text;

    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Manage forums");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.ContentManagement.Forums.Forum.EditForum") - @Model.Name 
            <small>@Html.ActionLink("(" + T("Admin.ContentManagement.Forums.Forum.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn bg-blue" value="@T("Admin.Common.SaveContinue")" />
            <span id="forum-delete" class="btn bg-red">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateForum", Model)
}
@Html.DeleteConfirmation("DeleteForum", "forum-delete")
