@model ForumModel
@{
    //page title
    ViewBag.Title = T("Admin.ContentManagement.Forums.Forum.CreateForum").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.ContentManagement.Forums.Forum.CreateForum") 
            <small>@Html.ActionLink("(" + T("Admin.ContentManagement.Forums.Forum.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn btn-default" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="btn btn-default" value="@T("Admin.Common.SaveContinue")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateForum", Model)
}