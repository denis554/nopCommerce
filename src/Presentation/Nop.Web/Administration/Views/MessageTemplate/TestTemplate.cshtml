@model TestMessageTemplateModel
@{
    //page title
    ViewBag.Title = T("Admin.ContentManagement.MessageTemplates.TestDetails").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.ContentManagement.MessageTemplates.TestDetails")
            <small>@Html.ActionLink("(" + T("Admin.ContentManagement.MessageTemplates.Test.BackToTemplate") + ")", "Edit", new { id = Model.Id })</small>
        </h1>
        <div class="pull-right">
            <input type="submit" name="send-test" class="btn btn-default" value="@T("Admin.ContentManagement.MessageTemplates.Test.Send")" />
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-sm-3">
                                @Html.NopLabelFor(model => model.SendTo)
                            </div>
                            <div class="col-sm-9">
                                @Html.NopEditorFor(model => model.SendTo)
                                @Html.ValidationMessageFor(model => model.SendTo)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-3">
                                &nbsp;
                            </div>
                            <div class="col-sm-9">
                                @T("Admin.ContentManagement.MessageTemplates.Test.Tokens.Description")
                            </div>
                        </div>
                        @foreach (var token in Model.Tokens)
                        {
                            <div class="form-group">
                                <div class="col-sm-3">
                                    <label class="control-label">@token</label>
                                </div>
                                <div class="col-sm-9">
                                    <input type="text" name="token_@(token)" class="form-control" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}