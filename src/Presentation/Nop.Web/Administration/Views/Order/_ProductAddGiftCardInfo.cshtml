@model OrderModel.AddOrderProductModel.GiftCardModel

@if (Model.IsGiftCard)
{
    //Actually just a copy of \Presentation\Nop.Web\Views\Catalog\_GiftCardInfo.cshtml
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-3">
                    @Html.NopLabelFor(model => model.RecipientName)
                </div>
                <div class="col-sm-6">
                    @Html.NopEditorFor(model => model.RecipientName)
                </div>
            </div>
            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.RecipientEmail)
                    </div>
                    <div class="col-sm-6">
                        @Html.NopEditorFor(model => model.RecipientEmail)
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-sm-3">
                    @Html.NopLabelFor(model => model.SenderName)
                </div>
                <div class="col-sm-6">
                    @Html.NopEditorFor(model => model.SenderName)
                </div>
            </div>
            @if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
            {
                <div class="form-group">
                    <div class="col-sm-3">
                        @Html.NopLabelFor(model => model.SenderEmail)
                    </div>
                    <div class="col-sm-6">
                        @Html.NopEditorFor(model => model.SenderEmail)
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-sm-3">
                    @Html.NopLabelFor(model => model.Message)
                </div>
                <div class="col-sm-6">
                    @Html.NopTextAreaFor(model => model.Message)
                </div>
            </div>
        </div>
    </div>
}
