@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
}
@model OrderModel.UploadLicenseModel
@{
    //page title
    ViewBag.Title = T("Admin.Orders.Products.License.UploadFile").Text;
}

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();}
        catch (e){}
        window.close();
    </script>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Orders.Products.License.UploadFile")
        </h1>
        <div class="pull-right">
            &nbsp;
        </div>
    </div>

    <div class="content">
        @Html.ValidationSummary(false)
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        @Html.HiddenFor(model => model.OrderId)
                        @Html.HiddenFor(model => model.OrderItemId)
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.NopEditorFor(model => model.LicenseDownloadId)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-4">
                                &nbsp;
                            </div>
                            <div class="col-xs-2">
                                <input type="submit" name="uploadlicense" value="@T("Admin.Common.Save")" id="uploadlicense" class="btn btn-default"/>
                            </div>
                            <div class="col-xs-2">
                                @if (Model.LicenseDownloadId > 0)
                                {
                                    <input type="submit" name="deletelicense" value="@T("Admin.Common.Delete")" id="deletelicense" class="btn btn-default"/>
                                }
                                else
                                {
                                    <text>&nbsp;</text>
                                }
                            </div>
                            <div class="col-xs-4">
                                &nbsp;
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
