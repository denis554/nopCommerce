@using Nop.Core
@using Nop.Services.Localization
@inject IStoreContext storeContext
@inject IWebHelper webHelper
@inject IWorkContext workContext
@{
    var link = Url.RouteUrl("BlogRSS", new { languageId = workContext.WorkingLanguage.Id }, webHelper.CurrentRequestProtocol);
    var storeName = storeContext.CurrentStore.GetLocalized(x => x.Name);
}
<link href="@link" rel="alternate" type="application/rss+xml" title="@storeName: Blog" />