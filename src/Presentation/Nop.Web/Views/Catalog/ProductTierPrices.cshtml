@model IList<ProductModel.ProductVariantModel.TierPriceModel>
@using Nop.Web.Framework.UI;
@using Nop.Web.Models.Catalog;
@using MvcContrib.UI.Grid
@if (Model.Count > 0)
{
    <div class="tier-prices">
        <div class="prices-header">
            @T("Products.TierPrices")
        </div>
        <div class="prices">
            <table class="prices-table">
                <tr>
                    <td>
                        <table class="header-table">
                            <tr>
                                <td class="field-header" runat="server">
                                    @T("Products.TierPrices.Quantity")
                                </td>
                            </tr>
                            <tr>
                                <td class="field-header" runat="server">
                                    @T("Products.TierPrices.Price")
                                </td>
                            </tr>
                        </table>
                    </td>
                    @foreach (var tierPrice in Model)
                    {
                        <td>
                            <table class="item-table">
                                <tr>
                                    <td class="item-quantity">
                                        @tierPrice.Quantity
                                        <text>+</text>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="item-price">
                                        @tierPrice.Price
                                    </td>
                                </tr>
                            </table>
                        </td>
                    }
                </tr>
            </table>
        </div>
    </div>
}