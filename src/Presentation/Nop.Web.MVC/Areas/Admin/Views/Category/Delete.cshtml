@model Nop.Web.MVC.Areas.Admin.Models.CategoryModel
@using (Html.BeginForm("Delete", "Category", new { id = Model.Id }))
{
    <div>
        <p>
            @T("Admin.Common.DeleteConfirmation", Model.Name)
        </p>
        <div class="form-actions">
            <span class="t-button" onclick="closeModalWindow();">@T("Admin.Common.NoCancel")</span>
            <input type="submit" class="t-button" value="@T("Admin.Common.Delete")" />
        </div>
    </div>
}