@model Telerik.Web.Mvc.GridModel<Nop.Core.Domain.Catalog.Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@using Telerik.Web.Mvc.UI
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Areas/Admin/Content/images/ico-catalog.png")" />
            @T("Manage categories")
        </div>
        <div class="options">
            <input type="button" onclick="location.href='@Url.Action("Create")'" value="Add new" class="adminButtonBlue" />
        </div>
    </div>
}
<table class="adminContent">
    <tr>
        <td>
        

                @(Html.Telerik().Grid<Nop.Core.Domain.Catalog.Category>()
		            .Name("Grid")
                    .BindTo(Model.Data)
                    .Columns(columns =>
                    {
                        columns.Template(x => Html.ActionLink("Edit", "Edit", new { id = x.Id })).Width(50).HtmlAttributes(new {align="center"});
                        columns.Bound(x => x.Name);
                        columns.Bound(x => x.DisplayOrder);
                    })
                    .Pageable(settings => settings.Total(Model.Total).PageSize(10))
		            .EnableCustomBinding(true))

        </td>
    </tr>
</table>
